generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  username  String    @unique
  name      String?
  password  String
  createdAt DateTime  @default(now())
  memberOf  Session[] @relation("CreatedSessions")
  member    Session[] @relation("SessionMembers")
}

model Session {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  creatorId Int
  creator   User     @relation("CreatedSessions", fields: [creatorId], references: [id])
  members   User[]   @relation("SessionMembers")
}
